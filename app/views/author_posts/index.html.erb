<h1>Listing author_posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @author_posts.each do |author_post| %>
      <tr>
        <td><%= author_post.post %></td>
        <td><%= author_post.author %></td>
        <td><%= link_to 'Show', author_post %></td>
        <td><%= link_to 'Edit', edit_author_post_path(author_post) %></td>
        <td><%= link_to 'Destroy', author_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author post', new_author_post_path %>
